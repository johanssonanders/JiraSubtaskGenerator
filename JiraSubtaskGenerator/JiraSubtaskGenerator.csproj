<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>JiraSubtaskGenerator</RootNamespace>

    <!-- Turn app into a .NET tool -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>subtasks</ToolCommandName>

    <!-- NuGet metadata -->
    <PackageId>JiraSubtaskGenerator</PackageId>
    <Version>1.0.0</Version>
    <Authors>Anders Johansson</Authors>
    <Description>A C# .NET Core console application that reads a Markdown file and creates Jira subtasks under a specified parent issue (Story/Task).</Description>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\README.md" />
    <None Include="..\README.md" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="8.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="Markdig" Version="0.44.0" />
  </ItemGroup>

</Project>